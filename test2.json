{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "eastus",
      "metadata": { "description": "Resources location" }
    },
    "enforceStorageNetworkRules": {
      "type": "bool",
      "defaultValue": true,
      "metadata": { "description": "Enforce storage network rules to restrict access to Firefly IPs only" }
    },
    "fireflyEips": {
      "type": "array",
      "defaultValue": [
        "3.224.145.192",
        "54.166.221.160",
        "52.22.128.83"
      ],
      "metadata": { "description": "Fallback Firefly IP addresses for storage account network rules" }
    },
    "newguid": {
      "type": "string",
      "defaultValue": "[newGuid()]",
      "metadata": {
        "description": "Just a Guid to append to deployment names"
      }
    }
  },
  "variables": {
    "resourceGroupName": "[concat('firefly-test-', parameters('newguid'))]",
    "storageAccountName": "[concat('fireflytest', uniqueString(subscription().subscriptionId))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2021-04-01",
      "name": "[variables('resourceGroupName')]",
      "location": "[parameters('location')]",
      "tags": {
        "purpose": "firefly-test"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat('firefly-test-deployment-', parameters('newguid'))]",
      "resourceGroup": "[variables('resourceGroupName')]",
      "dependsOn": [
        "[variables('resourceGroupName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "parameters": {
          "location": { "value": "[parameters('location')]" },
          "storageAccountName": { "value": "[variables('storageAccountName')]" },
          "enforceStorageNetworkRules": { "value": "[parameters('enforceStorageNetworkRules')]" },
          "fireflyEips": { "value": "[parameters('fireflyEips')]" }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "location": { "type": "string" },
            "storageAccountName": { "type": "string" },
            "enforceStorageNetworkRules": { "type": "bool" },
            "fireflyEips": { "type": "array" }
          },
          "variables": {
            "deploymentScriptName": "fetch-firefly-ips"
          },
          "resources": [
            {
              "type": "Microsoft.Resources/deploymentScripts",
              "apiVersion": "2020-10-01",
              "name": "[variables('deploymentScriptName')]",
              "location": "[parameters('location')]",
              "kind": "AzurePowerShell",
              "properties": {
                "retentionInterval": "PT1H",
                "timeout": "PT5M",
                "azPowerShellVersion": "8.1",
                "cleanupPreference": "Always",
                "environmentVariables": [
                  {
                    "name": "FALLBACK_IPS",
                    "value": "[string(parameters('fireflyEips'))]"
                  }
                ],
                "scriptContent": "$ErrorActionPreference = 'Stop'\n\ntry {\n    Write-Host 'Fetching Firefly IPs from API...'\n\n    $response = Invoke-RestMethod `\n        -Uri 'https://api.firefly.ai/v2/infrastructure/public-nat-ips' `\n        -Method Get `\n        -TimeoutSec 30\n\n    if ($response -and $response.ips -and $response.ips.Count -gt 0) {\n        Write-Host \"Successfully fetched $($response.ips.Count) IPs from API\"\n        $ipsArray = $response.ips\n    }\n    else {\n        Write-Warning 'API response was empty or invalid, using fallback IPs'\n        $ipsArray = $Env:FALLBACK_IPS | ConvertFrom-Json\n    }\n}\ncatch {\n    Write-Warning \"Failed to fetch IPs from API: $($_.Exception.Message)\"\n    Write-Host 'Using fallback IPs'\n    $ipsArray = $Env:FALLBACK_IPS | ConvertFrom-Json\n}\n\n$DeploymentScriptOutputs = @{}\n$DeploymentScriptOutputs['ips'] = $ipsArray\n\nWrite-Host \"Output IPs: $($ipsArray -join ', ')\"\n"
              }
            },
            {
              "type": "Microsoft.Storage/storageAccounts",
              "apiVersion": "2021-09-01",
              "name": "[parameters('storageAccountName')]",
              "location": "[parameters('location')]",
              "tags": {
                "purpose": "firefly-test"
              },
              "sku": {
                "name": "Standard_LRS"
              },
              "kind": "StorageV2",
              "dependsOn": [
                "[resourceId('Microsoft.Resources/deploymentScripts', variables('deploymentScriptName'))]"
              ],
              "properties": {
                "accessTier": "Hot",
                "allowBlobPublicAccess": true,
                "minimumTlsVersion": "TLS1_2",
                "networkAcls": "[if(parameters('enforceStorageNetworkRules'), createObject('defaultAction', 'Deny', 'ipRules', map(reference(resourceId('Microsoft.Resources/deploymentScripts', variables('deploymentScriptName'))).outputs.ips, lambda('ip', createObject('value', lambdaVariables('ip'), 'action', 'Allow')))), createObject('defaultAction', 'Allow'))]"
              }
            }
          ],
          "outputs": {
            "storageAccountName": {
              "type": "string",
              "value": "[parameters('storageAccountName')]"
            },
            "fetchedIps": {
              "type": "array",
              "value": "[reference(resourceId('Microsoft.Resources/deploymentScripts', variables('deploymentScriptName'))).outputs.ips]"
            }
          }
        }
      }
    }
  ],
  "outputs": {
    "resourceGroupName": {
      "type": "string",
      "value": "[variables('resourceGroupName')]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "fireflyIps": {
      "type": "array",
      "value": "[reference(concat('firefly-test-deployment-', parameters('newguid'))).outputs.fetchedIps.value]"
    },
    "ipCount": {
      "type": "int",
      "value": "[length(reference(concat('firefly-test-deployment-', parameters('newguid'))).outputs.fetchedIps.value)]"
    },
    "deploymentSummary": {
      "type": "object",
      "value": {
        "message": "Successfully deployed test storage account with dynamic Firefly IPs",
        "resourceGroup": "[variables('resourceGroupName')]",
        "storageAccount": "[variables('storageAccountName')]",
        "ipCount": "[length(reference(concat('firefly-test-deployment-', parameters('newguid'))).outputs.fetchedIps.value)]"
      }
    }
  }
}
